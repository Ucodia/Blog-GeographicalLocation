<Window x:Class="Ucodia.GeographicalLocation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="Geographical Locations"  SizeToContent="WidthAndHeight">
    <Grid>
        <ComboBox Margin="12" Width="300" SelectedIndex="0"
                  ItemsSource="{Binding Path=Locations}" DisplayMemberPath="FriendlyName"/>
    </Grid>
</Window>
